@model Jewelery
@{
    string strTitle = "Редактировать запись";
    ViewBag.Title = strTitle;
}

<script src="~/js/ckeditor/ckeditor.js"></script>

<div>
    <h2>@strTitle</h2>
    <div>
        <form asp-area="Admin" asp-controller="Jewelery" asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="DateAdded" />
            <input type="hidden" asp-for="Image" />

            <div asp-validation-summary="All"></div>
            <div class="div-box">
                <label asp-for="Name"></label>
                <input asp-for="Name" />
                <span asp-validation-for="Name"></span>
            </div>
            <div class="div-box">
                <label asp-for="ShortDesc"></label>
                <input asp-for="ShortDesc" />
                <span asp-validation-for="ShortDesc"></span>
            </div>
            <div class="div-box">
                <label asp-for="LongDesc"></label>
                <textarea asp-for="LongDesc"></textarea>
                <span asp-validation-for="LongDesc"></span>
            </div>
            <div>
                <label asp-for="Price"></label>
                <textarea asp-for="Price"></textarea>
                <span asp-validation-for="Price"></span>
            </div>
            <div>
                <label asp-for="Category"></label>
                <textarea asp-for="Category"></textarea>
                <span asp-validation-for="Category"></span>
            </div>
            <div>
                <label asp-for="Avaliable"></label>
                <input type="checkbox" asp-for="Avaliable" style="width: 20px;height: 20px; appearance: auto;">
                <span asp-validation-for="Avaliable"></span>
            </div>
            <div>
                <label asp-for="IsFavorite"></label>
                <input type="checkbox" asp-for="IsFavorite" style="width: 20px;height: 20px; appearance: auto;">
                <span asp-validation-for="IsFavorite"></span>
            </div>
            <div class="div-box">
                <label asp-for="Image"></label>
                <input type="file" name="titleImageFile" id="titleImageFile" />
                <div>
                    <img style="display : block; max-width : 100%; margin : 0 auto" src="~/images/@Model.Image" />
                </div>
            </div>
            <div class="div-box">
                <label asp-for="MetaTitle"></label>
                <input asp-for="MetaTitle" />
                <span asp-validation-for="MetaTitle"></span>
            </div>
            <div class="div-box">
                <label asp-for="MetaDescription"></label>
                <input asp-for="MetaDescription" />
                <span asp-validation-for="MetaDescription"></span>
            </div>
            <div class="div-box">
                <label asp-for="MetaKeywords"></label>
                <input asp-for="MetaKeywords" />
                <span asp-validation-for="MetaKeywords"></span>
            </div>
            <input type="submit" value="Сохранить" />
        </form>
    </div>
</div>



<script>
    window.onload = function() {
        var newCKEdit = CKEDITOR.replace('@Html.IdFor(x=>x.LongDesc)');
        newCKEdit.updateElement();
    }
</script>